# Database URL for local PostgreSQL (matches credentials in root .env)
# Note: search_path=candidate ensures Better-Auth uses the candidate schema
DATABASE_URL="postgresql://niyyah:niyyah@localhost:5432/niyyah?options=-c%20search_path%3Dcandidate"

# SMTP Configuration (Mailpit for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM=noreply@niyyah.se

# Better Auth Secret (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=dev-secret-change-in-production-use-openssl-rand-base64-32

# Application Origin URL (required for production)
ORIGIN=http://localhost:8020
