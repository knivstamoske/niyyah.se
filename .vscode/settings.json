{
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.test.ts,${capture}.spec.ts,${capture}.mock.ts"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.gitignore": true,
    "**/.npmrc": true,
    "**/.prettierignore": true,
    "**/.prettierrc": true,
    "**/.svelte-kit": true,
    "**/.wrangler": true,
    "**/.playwright-mcp": true,
    "**/eslint.config.js": true,
    "**/node_modules": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "oxc.fmt.experimental": true,
  "svelte.enable-ts-plugin": true
}
